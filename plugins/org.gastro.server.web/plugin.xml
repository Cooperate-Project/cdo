<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.equinox.http.registry.servlets">
      <servlet
            alias="/gastro"
            class="org.gastro.server.internal.web.GastroServlet"
            load-on-startup="true"/>
   </extension>
   <extension
         point="org.eclipse.equinox.http.registry.resources">
      <resource
            alias="/gastro.css"
            base-name="/gastro.css">
      </resource>
   </extension>

</plugin>
