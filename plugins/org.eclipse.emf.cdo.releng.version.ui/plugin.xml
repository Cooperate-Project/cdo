<plugin>

   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="org.eclipse.emf.cdo.releng.version.ui.contribution1"
            objectClass="org.eclipse.core.resources.IProject">
         <action
               class="org.eclipse.emf.cdo.releng.version.ui.AddNatureAction"
               enablesFor="*"
               id="org.eclipse.emf.cdo.releng.AddNatureAction"
               label="Add Version Tool Nature"
               menubarPath="org.eclipse.emf.cdo.releng/group1"
               state="true"
               style="push"
               tooltip="Add the CDO version tool nature to the selected project(s)">
         </action>
         <visibility>
            <not>
		            <objectState
		                  name="projectNature"
		                  value="org.eclipse.emf.cdo.releng.version.VersionNature">
		            </objectState>
            </not>
         </visibility>
      </objectContribution>
      <objectContribution
            adaptable="true"
            id="org.eclipse.emf.cdo.releng.version.ui.contribution2"
            objectClass="org.eclipse.core.resources.IProject">
         <action
               class="org.eclipse.emf.cdo.releng.version.ui.RemoveNatureAction"
               enablesFor="*"
               id="org.eclipse.emf.cdo.releng.RemoveNatureAction"
               label="Remove Version Tool Nature"
               menubarPath="org.eclipse.emf.cdo.releng/group1"
               state="true"
               style="push"
               tooltip="Remove the CDO version tool nature from the selected project(s)">
         </action>
         <visibility>
	            <objectState
	                  name="projectNature"
	                  value="org.eclipse.emf.cdo.releng.version.VersionNature">
	            </objectState>
         </visibility>
      </objectContribution>
   </extension>

</plugin>
